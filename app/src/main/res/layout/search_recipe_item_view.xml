<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightGrey"
    android:id="@+id/searchResultItemLayout">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="15dp"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/searchItemImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@color/green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toEndOf="@id/searchItemImage"
                app:layout_constraintTop_toTopOf="@id/searchItemImage"
                app:layout_constraintBottom_toBottomOf="@id/searchItemImage">


                <TextView
                    android:id="@+id/searchItemName"
                    style="@style/TitleBigText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Testing" />

                <TextView
                    android:id="@+id/searchItemCuisine"
                    style="@style/BodyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indian"/>

                <TextView
                    android:id="@+id/searchItemMealType"
                    style="@style/BodyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch"/>


                <TextView
                    android:id="@+id/searchItemRating"
                    style="@style/TitleMediumText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/baseline_star_24"
                    android:drawableTint="@color/gold"
                    android:text="2.5"/>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>